@model promerica_frontend.Models.PuestoViewModel

<li class="list-group-item border-0 px-0">
    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded border">
        <div>
            <strong>@Model.Codigo - @Model.Puesto - @Model.Nombre</strong>
        </div>
        <div>
            <a href="/Puestos/Edit/@Model.Id" class="btn btn-sm btn-outline-primary me-1">Editar</a>
            <a href="/Puestos/Delete/@Model.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
        </div>
    </div>

    @if (Model.Subordinados != null && Model.Subordinados.Any())
    {
        <ul class="list-group mt-2 ms-4 border-start border-2 ps-3">
            @foreach (var sub in Model.Subordinados)
            {
                @Html.Partial("_PuestoPartial", sub)
            }
        </ul>
    }
</li>
